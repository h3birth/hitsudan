<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PenSettingLabel" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PenSettingOption" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textGrey</item>
    </style>

    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:tint">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

</resources>
